.navbar {
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.citylist {
  height: 100%;
  padding-top: 45px;
}

.city .title {
  font-size: 14px;
  padding: 10px 15px;
  color: #999;
}

.city .name {
  width: 100%;
  height: 50px;
  padding: 0 15px;
  line-height: 50px;
  border-bottom: 1px solid #eeeeee;
  font-size: 16px;
  color: #333;
  background: #fff;
  cursor: pointer;
}

.city-index {
  position: fixed;
  top: 60px;
  right: 10px;
}

.city-index li {
  width: 20px;
  height: 20px;
  font-size: 13px;
  margin-top: 10px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
}

.city-index .active {
  color: #fff;
  background-color: #21b97a;
}
